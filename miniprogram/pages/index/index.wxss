.userinfo-nickname-wrapper {
  flex: 1;
  text-align: left
}
.group-title {
  border: 1px solid #ddd;
  padding: 20rpx
}
.group {
  overflow: hidden;
  height: auto;
  transition: height 3s;
  
}
.group-item {
  border: 1px solid #eee;
  border-top: none;
   padding: 20rpx 40rpx;
}
.hidden {
  height: 0;
}


.operation {
  position: fixed;
  display: none;
  width: 150rpx;
  font-size: 28rpx;
  background: #fff;
  box-shadow: 0 0 6rpx #ccc;
  padding: 15rpx;
  line-height: 60rpx;
}
.operation.show {
  display: block;
}
.operation-item {
  height: 60rpx;
}