.weui-dialog__bd {
  margin: 0 !important;
  /* width: 170px; */
}
page {
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 0 10px;
  box-sizing: border-box;
  font-size: 34rpx;
  height: 100%;
}

.userinfo, .uploader, .tunnel {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: none;
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  align-items: start;
  transition: all 300ms ease;
}

.userinfo {
  padding-left: 270rpx;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar[size] {
  width: 150rpx;
}


.userinfo-avatar:after {
  border: none;
}

